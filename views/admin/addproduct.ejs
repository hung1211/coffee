<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title key="title">Coffee Management - <span key="add-product"></span></title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css/jquery.imagesloader.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../admin/partials/adminHeader', {menu:menu}); %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../admin/partials/topbar'); %>


                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800" key="add-product" id="page-title">Add Product</h1>
                            <div class="row">
                                <div class="col-sm-4 mb-3">
                                    <input type="text" class="form-control" id="proID" value="<%=idRender%>" style="display: none;" disabled>
                                    <input type="text" class="form-control" id="proName" placeholder="Product Name"
                                        key="product-name">
                                </div>
                                <div class="col-sm-4 mb-3">
                                    <select class="form-control" id="proCategory">
                                        <option value="0">Select Category</option>
                                    </select>
                                </div>
                                <div class="col-sm-4 mb-3">
                                    <input type="text" class="form-control" id="proPrice"
                                        placeholder="Enter Product Price">
                                </div>
                                <div class="col-sm-12 mb-3">
                                    <textarea class="form-control" id="proDescription"
                                        placeholder="Type Product Description"></textarea>
                                </div>
                                <div class="col-sm-12 mb-3" id="productImageArea">
                                    <%- include('../admin/partials/upload-file'); %>
                                </div>


                            </div>
                            <div class="row mb-3">
                                <button class="btn btn-primary" id="btnAdd" onclick="addProduct()">Add Product</button>
                                <button class="btn btn-danger ml-auto" style="display: none;" id="btnDelete" onclick="deleteProduct()">Delete Product</button>
                            </div>
                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../admin/partials/adminFooter'); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <div id="cofirmAdd-modal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Product Success</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <h5>What do you want to do next?</h5>
                    <a href="productlist" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-th-list"></i>
                        </span>
                        <span class="text">Go To Product List</span>
                    </a>
                    <a href="addproduct" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-plus"></i>
                        </span>
                        <span class="text">Add More Product</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <%- include('../admin/partials/modallogout'); %>

        <!-- Bootstrap core JavaScript-->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/js/sb-admin-2.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.3.0/mustache.min.js"></script>
        <script src="/js/jquery.MultiLanguage.js"></script>
        <script src="/admin/js/jquery.product.js"></script>
        <script src="/js/jquery.imagesloader-1.0.1.js"></script>
        <script src="/js/bootstrap-show-notification.js"></script>

</body>

</html>