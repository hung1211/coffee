<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title key="title">Coffee Management - Current Order</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../admin/partials/adminHeader', {menu:menu}); %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../admin/partials/topbar'); %>


                        <!-- Begin Page Content -->
                        <div class="container-fluid" id="tableContainer">
                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800 text-uppercase">Bàn đang hoạt động</h1>
                            <div class="row">
                                <div class="container-fluid">
                                    <div class="row" id="tableList">
                                
                                    </div>
                                  </div>
                            </div>



                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../admin/partials/adminFooter'); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <div id="orderModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="orderModal-title"></h5>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body row prevent-select">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Món</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Thành tiền</th>
                      </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <tr><td colspan="5" class="text-right">Tổng tiền: <span id="spanTotalPrice"></span></td></tr>
                    </tfoot>
                  </table>
              
            </div>
            <div class="modal-footer d-flex justify-content-end">
              <button type="button" class="btn btn-primary" style="width: 100px;" data-dismiss="modal">OK</button>
            </div>
          </div>
        </div>
      </div>

    <%- include('../admin/partials/modallogout'); %>
    <script id="table-template" type="x-tmpl-mustache">
        <div class="card ml-3 {{StatusColor}} mt-3 border-bottom-primary prevent-select table-item" data-id="{{TableID}}" data-name="{{TableName}}">
          <div class="card-body">
            <h3 class="card-title align-items-center text-light font-weight-bold text-uppercase w-100">{{TableName}}</h3>
            <div class="text-lg font-weight-bold text-light text-uppercase mb-1">{{Status}}</div>
            <div class="text-lg font-weight-bold text-light text-uppercase mb-1">{{TotalPrice}}</div>
            
          </div>
        </div>
      </script>
      <script id="order-deltais-template" type="x-tmpl-mustache">
          <tr>
            <td>{{rowid}}</td>
            <td>{{name}}</td>
            <td>{{price}}</td>
            <td>{{qty}}</td>
            <td class="text-right">{{calPrice}}</td>
          </tr>
        </script>

        <!-- Bootstrap core JavaScript-->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/js/sb-admin-2.js"></script>
        <script src="/js/mustache.min.js"></script>
        <script src="/js/jquery.MultiLanguage.js"></script>
        <script src="/js/bootstrap-show-notification.js"></script>
        <script src="/js/frontend.main.js"></script>
        <script src="/admin/js/jquery.order.current.js"></script>

</body>

</html>