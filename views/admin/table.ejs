<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title key="title">Coffee Management - Table</title>

    <!-- Custom fonts for this template-->
    <link href="../vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../css/sb-admin-2.min.css" rel="stylesheet">
    <link href="../css/jquery-ui.css" rel="stylesheet">
    <link href="../css/custom.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include('../admin/partials/adminHeader', {menu:menu}); %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../admin/partials/topbar'); %>


                        <!-- Begin Page Content -->
                        <div class="container-fluid" id="tableContainer">
                            <!-- Page Heading -->
                            <h1 class="h3 mb-4 text-gray-800" key="table">table</h1>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="card shadow h-100">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Danh Sách Bàn</h6>
                                        </div>
                                        <div class="card-body">
                                            <div id="modules" class="row">

                                            </div>
                                            <div class="row">
                                                <button id="btnAdd" class="btn btn-primary btn-icon-split">
                                                    <span class="icon text-white-50">
                                                        <i class="fas fa-plus"></i>
                                                    </span>
                                                    <span class="text">Add Table</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-8 d-md-block d-sm-none">
                                    <div class="card shadow h-100">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Khu Vực</h6>
                                        </div>
                                        <div class="card-body">
                                            <div id="areaList" class="row">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../admin/partials/adminFooter'); %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <div id="tableModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm Bàn</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Tên Bàn:</label>
                        <input type="text" class="form-control" data-id="" id="tableName" name="tableName">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="addtable()">OK</button>
                    <button type="button" class="btn btn-danger" id="btnDeletetable"
                        onclick="deletetable()">Delete</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <div id="tableareaModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Danh sách bàn trong <span id="tableareaModal-title"></span></h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <div class="row" id="tableareaModal-list" data-id="">

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="editList()">OK</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../admin/partials/modallogout'); %>
        <script id="tableItem-template" type="x-tmpl-mustache">
    <div class="card mw-50 mb-4 mr-3 border-bottom-primary prevent-select table-item {{css}}" data-id="{{TableID}}">
            <div class="text-sm font-weight-bold text-primary mt-2 text-uppercase mb-1">Bàn</div>
                
                <div class="text-lg font-weight-bold text-primary text-uppercase mb-1">{{TableName}}</div>
    </div>
</script>
        <script id="areaItem-template" type="x-tmpl-mustache">
    <div class="card mw-50 mb-4 py-3 mr-3 border-bottom-primary col-md-5 prevent-select area-item dropzone" data-id="{{AreaID}}" data-value="{{AreaName}}">
        <div class="card-body">
                <div class="text-lg font-weight-bold text-primary text-uppercase mb-1">{{AreaName}}</div>
                <div class="text-sm font-weight-bold text-primary text-uppercase mb-1"><span class="tableCount">{{CountTable}}</span> Bàn</div>
        </div>
    </div>
</script>

        <!-- Bootstrap core JavaScript-->
        <script src="../vendor/jquery/jquery.min.js"></script>
        <script src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="../vendor/jquery/jquery-ui.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="../vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="../js/sb-admin-2.js"></script>
        <script src="../js/mustache.min.js"></script>
        <script src="../js/jquery.MultiLanguage.js"></script>
        <script src="../js/bootstrap-show-notification.js"></script>
        <script src="../admin/js/jquery.table.js"></script>

</body>

</html>